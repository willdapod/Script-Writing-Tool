<Window x:Class="ScriptWriterApp.CharacterDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Character Details" Height="250" Width="350">
    <StackPanel Margin="10">
        <TextBlock Text="Character Name:"/>
        <TextBox x:Name="CharacterNameBox"/>

        <TextBlock Text="Notes:" Margin="5,10,5,5"/>
        <TextBox x:Name="NotesBox" AcceptsReturn="True" Height="100"/>

        <Button Content="Save" HorizontalAlignment="Right" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
