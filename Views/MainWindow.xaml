<Window x:Class="ScriptWritingTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Script Writing Tool" Height="600" Width="800">
    <DockPanel>
        <!-- Toolbar Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Load" Command="{Binding LoadCommand}"/>
                <MenuItem Header="Save" Command="{Binding SaveCommand}"/>
                <Separator/>
                <MenuItem Header="Exit" Click="ExitApplication"/>
            </MenuItem>
        </Menu>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Scriptwriting Area -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Scriptwriting Area" FontSize="16"/>
                <TextBox x:Name="ScriptTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                         Text="{Binding ScriptText, Mode=TwoWay}" SpellCheck.IsEnabled="True"
                         Height="200"/>

                <!-- Selection for Characters & Scene Transitions -->
                <StackPanel Orientation="Horizontal">
                    <ComboBox ItemsSource="{Binding Characters}" DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedCharacter}" Width="150"/>
                    <ComboBox ItemsSource="{Binding SceneTransitions}" SelectedItem="{Binding SelectedTransition}"
                              Width="150"/>
                </StackPanel>

                <Button Content="Add Line" Command="{Binding AddScriptLineCommand}"/>
            </StackPanel>

            <!-- Sidebar for Scenes & Characters -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Scenes" FontWeight="Bold"/>
                <ListBox ItemsSource="{Binding Scenes}" DisplayMemberPath="Title"
                         SelectedItem="{Binding SelectedScene}" MouseDoubleClick="SceneList_DoubleClick"/>

                <Button Content="Add Scene" Click="AddScene_Click"/>

                <TextBlock Text="Characters" FontWeight="Bold" Margin="10,20,10,5"/>
                <ListBox ItemsSource="{Binding Characters}" DisplayMemberPath="Name"
                         SelectedItem="{Binding SelectedCharacter}" MouseDoubleClick="CharacterList_DoubleClick"/>

                <Button Content="Add Character" Click="AddCharacter_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
